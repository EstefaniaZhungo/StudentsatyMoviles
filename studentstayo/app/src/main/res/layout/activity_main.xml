<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:shadowColor="#A0A0A0"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="BIENVENIDO"
        android:textColor="#333333"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Logo principal"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logoprincipal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:backgroundTint="#056688"
        app:cornerRadius="16dp"
        android:elevation="4dp"
        android:onClick="Iniciar"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Iniciar SesiÃ³n"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button11"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:elevation="2dp"
        android:onClick="Registro"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="#056688"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="13dp"
        app:strokeColor="#056688"
        app:strokeWidth="2dp" />

</LinearLayout>